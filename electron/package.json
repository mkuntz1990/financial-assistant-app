{
  "name": "financial-assistant-electron",
  "version": "0.1.3",
  "main": "main.js",
  "description": "Desktop wrapper for Financial Assistant App",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0",
    "semantic-release": "^25.0.2"
  },
  "build": {
    "appId": "com.financialassistant.app",
    "productName": "Financial Assistant App",
    "publish": [
      {
        "provider": "github",
        "owner": "mkuntz1990",
        "repo": "financial-assistant-app"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "directories": {
      "buildResources": "build"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
